{
    "daemon": {
        "runasgroup": "root",
        "runasuser": "root",
        "concurrent": false,
        "daemonize": true,
        "mode": "single"
    },
    "addons": {
        "active": {
            
        },
        "scan": [
            "addons/",
            "vendors/"
        ]
    },
    "log": {
        "level": "info",
        "loggers": [
            {
                "destination": "echo",
                "key": "echo"
            },
            {
                "destination": "filesystem",
                "file": "log/chatbot.log",
                "key": "persist"
            }
        ]
    },
    "client": {
        "type": "slack",
        "slack": {
            "handler": "\\Kaecyra\\ChatBot\\Client\\Slack\\SlackRtmClient"
        }
    }
}
